<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/imgNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <!-- Source rectangle  -->
        <TextView
            android:id="@+id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:padding="6dp"
            android:text="@string/source_name"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_on_image"
            android:textStyle="bold"/>

        <!-- Actions rectangle  -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:padding="6dp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_on_image">

            <ImageView
                android:id="@+id/btnFavorite"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_favorite"
                app:tint="@color/white"
                android:layout_marginEnd="12dp"/>

            <ImageView
                android:id="@+id/btnSave"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_save"
                app:tint="@color/white"
                android:layout_marginEnd="12dp"/>

            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_share"
                app:tint="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Headline -->
    <TextView
        android:id="@+id/tvHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageContainer"
        android:text="@string/news_headline"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeadline"
        android:text="@string/news_description"
        android:padding="8dp"
        android:textColor="@color/light_grey"/>

    <!-- Link fixed at bottom -->
    <TextView
        android:id="@+id/tvReadMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/read_full"
        android:textColor="@color/blue"
        android:textStyle="bold"/>
</RelativeLayout>
